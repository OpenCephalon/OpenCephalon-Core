{% extends 'OpenCephalonBundle::base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block main %}



	<ol class="breadcrumb">
		<li class="active">Project {{  project.title }}</li>
	</ol>


	<h1>Project {{ project.title }} Item {{  item.title }}</h1>

	<p>Title</p>
	<p>{{  item.title }}</p>

	<p>URL</p>
	<p><a href="{{  item.url }}" target="_blank">{{  item.url }}</a></p>

	<p>Description</p>
	<p>{{  item.description }}</p>

	<p>Published At</p>
	<p>{{  item.publishedAt | date('r') }}</p>

	{%  if item.sourceStream %}
		<p>Source Stream</p>
		<p><a href="{{ path('opencephalon_project_source_stream',{ 'projectId':project.publicId, 'sourceId': item.sourceStream.source.publicId, 'streamId':item.sourceStream.publicId}) }}" class="btn btn-default">View</a></p>
	{%  endif %}

{%  endblock %}
